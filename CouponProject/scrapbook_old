CREATE TABLE APP.Coupon (
	ID INTEGER PRIMARY KEY AUTO_INCREMENT,
	TITLE VARCHAR(50) NOT NULL,
	START_DATE DATE NOT NULL,
	END_DATE DATE NOT NULL, 
	AMOUNT INTEGER NOT NULL,
	COUPON_TYPE VARCHAR(20) NOT NULL,
	MESSAGE VARCHAR(144) NOT NULL,
	PRICE DOUBLE NOT NULL,
	IMAGE VARCHAR(50)
);

CREATE TABLE APP.Company(
		ID INTEGER PRIMARY KEY AUTO_INCREMENT,
		COMP_NAME VARCHAR(20) NOT NULL,
		PASSWORD VARCHAR(20) NOT NULL,
		EMAIL VARCHAR(50) NOT NULL
);

CREATE TABLE APP.Customer (
	ID BIGINT PRIMARY KEY AUTO_INCREMENT,
	CUST_NAME VARCHAR(20) NOT NULL,
	PASSWORD VARCHAR(20) NOT NULL
);


CREATE TABLE APP.Customer_Coupon (
	CUST_ID INTEGER PRIMARY KEY,
	COUPON_ID INTEGER PRIMARY KEY
);

CREATE TABLE APP.Customer_Coupon (
	CUSTOMER_ID integer,
	COUPON_ID integer,
	PRIMARY KEY (CUSTOMER_ID , COUPON_ID)
);

CREATE TABLE APP.Company_Coupon (
	COMPANY_ID integer,
	COUPON_ID integer,
	PRIMARY KEY (company_ID , coupon_ID)
);

CREATE TABLE APP.Customer_Coupon (
(
   CUSTOMER_ID integer FOREIGN KEY REFERENCES Customer(ID),
   COUPON_ID integer FOREIGN KEY REFERENCES Coupon(ID)
)

CREATE TABLE APP.Company_Coupon (
(
   COMPANY_ID integer FOREIGN KEY REFERENCES Company(ID),
   COUPON_ID integer FOREIGN KEY REFERENCES Coupon(ID)
)

CREATE TABLE APP.COMPANY_COUPON (COMPANY_ID INTEGER, COUPON_ID INTEGER);